[flake8]
extend-exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .venv,
    venv*

# Black-compatible options: E203, E701, E704, W503
extend-ignore = E203, E266, E501, E701, E704, W503, W605

# Black's default line length.
max-line-length = 88

# Specify the list of error codes you wish Flake8 to report.
select = B,C,E,F,W,T4,B9

# Parallelism
jobs = 4
